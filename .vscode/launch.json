    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/app.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Link Start",
            "program": "${workspaceFolder}/vlc-nightly-updater.sh",
            "args": ["-d", "start"]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Link Stop",
            "program": "${workspaceFolder}/vlc-nightly-updater.sh",
            "args": ["-d", "stop"]
        }
    ]
}